<div class="resource-group">
  <h2 id="{{title}}" class="page-header">{{title}}</h2>
  <p>{{description}}</p>
  <div class="endpoints">
    {{#each endpoints}}
      <div class="endpoint-group">
        <h3><span class="text-primary">{{method}}</span> {{../url}}{{url}}</h3>
        
        {{#if description}}
          <h4>Description</h4>
          <p>{{description}}</p>
        {{/if}}

        {{#if features}}
          <h4>Features</h4>
          <ul class="list-inline">
          {{#each features}}
            <li><i class="fa fa-check text-success"></i> {{this}}</li>
          {{/each}}
          </ul>
        {{/if}}

        {{#if parameters}}
          <h4>Parameters</h4>
          <div class="well well-sm">
            <div class="table-responsive">
              <table class="table table-condensed" style="margin: 0;">
                <thead>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Required</th>
                  <th>Description</th>
                </thead>
                <tbody>
                  {{#each parameters}}
                    <tr>
                      <td>{{@key}}</td>
                      <td>{{type}}</td>
                      <td class="text-{{#if required}}success{{else}}danger{{/if}}">
                        {{#if required}}
                          <i class="fa fa-check"></i>
                        {{else}}
                          <i class="fa fa-times"></i>
                        {{/if}}
                      </td>
                      <td class="text-muted">{{description}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        {{/if}}

        {{#if body}}
          <h4>Body</h4>
<pre>{{body}}</pre>
        {{/if}}

        {{#if examples}}
          <h4>Examples</h4>
          {{#each examples}}
            <div class="well well-sm">
              {{#if prefix}}{{prefix}}{{/if}}
              {{../../url}}
              {{#if suffix}}<span class="text-primary">{{suffix}}</span>{{/if}}
            </div>
            <p>{{{text}}}</p>
          {{/each}}
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>
