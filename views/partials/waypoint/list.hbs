{{#if results}}
  <div class="list-group">
    {{#if results.page}}
      {{#each results.docs}}
        {{> waypoint/single}}
      {{/each}}
    {{else}}
      {{#each results}}
        {{> waypoint/single}}
      {{/each}}
    {{/if}}
  </div>
  {{> pagination}}
{{else}}
  <p>No results.</p>
{{/if}}
