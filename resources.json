[
  {
    "title": "Users",
    "description": "Allows you to access, create and remove users.",
    "url": "/api/v1/users",
    "endpoints": [
      {
        "description": "Get all users.",
        "method": "GET",
        "features": ["Paginate", "Query", "Sort"],
        "examples": [
          { "text": "Get all users." },
          { "text": "Get all users (paginated).", "suffix": "?page=1" }
        ]
      },
      {
        "description": "Get a specific user.",
        "url": "/:id",
        "method": "GET",
        "features": [],
        "parameters": {
          "id": { "type": "Number", "required": true, "description": "User ID" }
        },
        "examples": [{ 
          "text": "Get user with id <code>1337</code>.", "suffix": "/1337" 
        }]
      },
      {
        "description": "Get all races for a specific user.",
        "url": "/:id/races",
        "method": "GET",
        "features": ["Paginate", "Query", "Sort"],
        "parameters": {
          "id": { "type": "Number", "required": true, "description": "User ID" }
        }
      },
      {
        "description": "Get autocompletion data for races that belong to specific user.",
        "url": "/:id/races/autocomplete",
        "method": "GET",
        "features": [],
        "parameters": {
          "id": { "type": "Number", "required": true, "description": "User ID" }
        }
      },
      {
        "description": "Creates a new race that belong to a specific user.",
        "url": "/:id/races",
        "method": "POST",
        "features": [],
        "parameters": {
          "id": { "type": "Number", "required": true, "description": "User ID" }
        },
        "body": "{ \"name\": \"Foo\", \"description\": \"Bar\" }"
      }
    ]
  }
]
