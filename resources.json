[
  {
    "title": "Users",
    "description": "Allows you to access, create and remove users.",
    "url": "/users",
    "endpoints": [
      {
        "description": "Get all users.",
        "method": "GET",
        "features": ["HTML", "Pagination"],
        "parameters": {
          "page": { 
            "type": "Number", 
            "required": false,
            "description": "Page number"
          }
        },
        "examples": [
          { 
            "suffix":"<code>?page=1</code>", 
            "text": "Fetches the first page of users." 
          }
        ]
      },
      {
        "description": "Get a specific user.",
        "method": "GET",
        "url": "/:id",
        "parameters": {
          "id": { 
            "type": "String", 
            "required": true,
            "description": "User ID" 
          }
        },
        "examples": [
          { 
            "suffix":"/<code>57058c1b2c0b225b02d56184</code>", 
            "text": "Fetches the user with ID <code>57058c1b2c0b225b02d56184</code>." 
          }
        ]
      }
    ]
  },
